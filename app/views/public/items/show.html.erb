<div>
  <%= image_tag @item.get_image %>
</div>
<table>
  <tr>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>¥<%= @item.add_tax_price.to_s(:dalimited) %><h10>(税込)</h10></td>
  </tr>
  <tr>
    <th>数量を選択してください</th>
    <% if customer_signed_in? %>
    <%= form_with model: @cart_item, url: cart_items_path , method: :post do |f| %>
    <td><%= f.hidden_field :item_id, :value => @item.id %></td>
    <td><%= f.select :amount , *[1..10] %></td>
    <td><%= f.submit 'カートに入れる', class: "btn-sm btn-primary" %></td>
    <% end %>
    <% end %>
  </tr>
</table>

