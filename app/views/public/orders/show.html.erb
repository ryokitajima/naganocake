<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-xs-9">
      <h4 class="bg-light text-dark">注文履歴詳細</h4>
<div class="row">
<div class="col">
<h6><strong>注文情報</strong></h6>
<table class="table table-bordered">
    <tr>
      <th class="table-secondary">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th class="table-secondary">配送先</th>
      <td>
        〒<%= @order.postal_code %></br>
        <%= @order.address %></br>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th class="table-secondary">支払方法</th><td><%= @order.payment_method_i18n %></td>
    </tr>
  </thead>
</table>
</div>
<div class="col align-self-start">
  <h6><strong>請求情報</strong></h6>
  <table class="table table-bordered">
    <tr>
      <th class="table-secondary">商品合計</th><td><%= (@order.payment.to_i - @order.postage.to_i).to_s(:delimited)  %></td>
    </tr>
    <tr>
      <th class="table-secondary">配送料</th><td><%= @order.postage %></td>
    </tr>
    <tr>
      <th class="table-secondary">ご請求額</th><td><%= @order.payment %></td>
    </tr>
  </table>
</div>
</div>
<div>
  <h6><strong>注文内容</strong></h6>
  <table class="table table-bordered">
    <thead class="table-secondary">
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <% @order_items.each do |order_item| %>
    <tboday>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.tax_included_price %></td>
        <td><%= order_item.amount %></td>
        <td><%= order_item.subtotal %></td>
      </tr>
    </tboday>
    <% end %>
  </table>
</div>
</div>
</div>
</div>
