<h4>注文情報確認</h4>

<div>
    <table border="1">
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
            </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody>
            <tr>
                <td><%= image_tag cart_item.item.image %><%= cart_item.item.name %> </td>
                <td><%= cart_item.item.add_tax_price.to_s(:dalimited) %></td>
                <td><%= cart_item.amount %></td>
                <td><%= cart_item.subtotal %></td>
            </tr>
        </tbody>
        <% end %>
    </table>
</div>
<%= form_with model: @order , url: orders_path do |f| %>
<div>
    <table border="1">
        <tr>
            <th>送料</th><td><%= @order.postage %>
             <%= f.hidden_field :postage, :value => @order.postage %>
            </td>
            <th>商品合計</th><td><%= @total.round.to_s(:delimited) %></td>
            <th>請求金額</th><td><%= @order.payment %>
             <%= f.hidden_field :payment, :value => @order.payment %>
            </td>
        </tr>
    </table>
</div>
<div>
    <table>
        <tr>
            <th>支払方法</th><td><%= @order.payment_method_i18n %>
            <%= f.hidden_field :payment_method, :value => @order.payment_method %>
            </td>
            <th>お届け先</th>
            <td>〒<%= @order.postal_code %>
            <%= f.hidden_field :postal_code, :value => @order.postal_code %>
            <%= @order.address %>
            <%= f.hidden_field :address, :value => @order.address %>
            <%= @order.name %>
            <%= f.hidden_field :name, :value => @order.name %>
            </td>
        </tr>
    </table>
</div>


<div>
    <%= f.submit "注文を確定する" %>
</div>
<% end %>