<h4>マイページ</h4>
<h5><strong>登録情報</strong></h5>
<%= link_to "編集する", edit_public_customer_path(current_customer), class: "btn btn-outline-secondary btn-block" %>

<table border="1" width="700">
  <tr>
    <th width="200">氏名</th><td><%= @customer.last_name %>　<%= @customer.first_name %></td>
  </tr>
  <tr>
    <th width="200">カナ</th><td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th width="200">郵便番号</th><td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th width="200">住所</th><td><%= @customer.address %></td>
  </tr>
  <tr>
    <th width="200">電話番号</th><td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th width="200">メールアドレス</th><td><%= @customer.email %></td>
  </tr>
</table>

<h5><strong>注文履歴</strong></h5>
<%= link_to "一覧を見る", class: "btn btn-outline-secondary btn-block" %>