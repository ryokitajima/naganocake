<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-xs-1"></div>
    <div class="col-xs-9">
      <h4 class="p-3 mb-2 bg-light text-dark"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>

  <%= form_with model: @customer, url:admin_customer_path(@customer.id), method: :patch do |f| %>
<table>
  <tr>
    <th>会員ID</th><td><%= @customer.id %></td>
  </tr>
  <tr>
    <th>氏名</th><td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th><td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th><td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th>住所</th><td><%= f.text_area :address %></td>
  </tr>
  <tr>
    <th>電話番号</th><td><%= f.text_field :telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th><td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td><%= f.radio_button :is_deleted, false %></td>
    <td><%= f.label :is_deleted, "有効" %></td>
    <td><%= f.radio_button :is_deleted, true %></td>
    <td><%= f.label :is_deleted, "退会" %></td>
  </tr>
</table>
  <%= f.submit "変更を保存", class: "btn btn-success btn-sm"%>
  <% end %>
</div>
</div>
</div>
