<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-xs-1"></div>
    <div class="col-xs-9">
      <h4 class="p-3 mb-2 bg-light text-dark"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>

<table>
  <tr>
    <th>会員ID</th><td><%= @customer.id %></td>
  </tr>
  <tr>
    <th>氏名</th><td><%= @customer.last_name %>　<%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th><td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th><td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th><td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th><td><%= @customer.telephone_number %></td>
  </tr>
  <th>メールアドレス</th><td><%= @customer.email %></td>
  <tr>
    <th>会員ステータス</th>
    <% if @customer.is_deleted == false %>
    <td>有効</td>
    <% else %>
    <td>退会</td>
    <% end %>
  </tr>
</table>

<%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success btn-sm"%>
<%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary btn-sm" %>
</div>
</div>
</div>

