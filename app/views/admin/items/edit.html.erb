<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-xs-1"></div>
    <div class="col-xs-9">
      <h4 class="p-3 mb-2 bg-light text-dark">商品編集</h4>
<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

 <table>
   <tr>
     <th>商品画像</th><td><%= f.file_field :image, placeholder: "Image", accept: "image/*" %> </td>
   </tr>
   <tr>
     <th>商品名</th><td><%= f.text_field :name %></td>
   </tr>
   <tr>
     <th>商品説明</th><td><%= f.text_area :introduction %></td>
   </tr>
   <tr>
     <th>税抜価格</th><td><%= f.text_field :price %>円</td>
   </tr>
 </table>
 <%= f.submit "変更を保存", class: "btn btn-success btn-sm" %>
 <% end %>
 