<h4>注文履歴一覧</h4>
<div>
  <table border="1">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>
     <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %> 
          <%= order.created_at.strftime('%Y/%m/%d') %>
          <% end %>
          </td>
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <td><%= order.order_items.sum(:amount) %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= paginate @orders %>
</div>
