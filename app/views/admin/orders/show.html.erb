<h4>注文履歴詳細</h4>
<div>
  <table>
    <tr>
      <th>購入者</th><td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
    </tr>
    <tr>
      <th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th><td>〒<%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
    </tr>
    <tr>
      <th>支払方法</th><td><%= @order.payment_method_i18n %></td>
    </tr>
  </table>
</div>

<div>
  <table border ="1">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <% @order_items.each do |order_item| %>
    <tbody>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.tax_included_price %></td>
        <td><%= order_item.amount %></td>
        <td><%= order_item.subtotal %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>

<div>
  <table>
    <tr>
      <th>商品合計</th><td><%= (@order.payment.to_i - @order.postage.to_i).to_s(:delimited)  %></td>
    </tr>
    <tr>
      <th>送料</th><td><%= @order.postage %></td>
    </tr>
    <tr>
      <th>請求金額合計</th><td><%= @order.payment %></td>
    </tr>
  </table>
</div>